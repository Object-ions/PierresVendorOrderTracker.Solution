<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Pierre's Bakery - Vendors Order</title>
  <link rel="stylesheet" type="text/css" href="~/css/styles.css">
</head>

<body>
  @using PierresVendorOrderTracker.Models;
  <div class="container">
    <h1>Pierre's Bakery</h1>
    <h2>Vendors Order Tracker</h2>

    @if (Model["orders"].Count == 0)
    {
      <p>@Model["vendor"].Name has not placed an order yet.</p>
      <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order to @Model["vendor"].Name's list</a></p>
    }
    else
    {
      <h3>Here are all the orders for this vendor:</h3>
      <ol>
        @foreach (Order order in @Model["orders"])
        {
          <li>Order ID: <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Id</a></li>
        }
      </ol>
      <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
    }

    <div class="link-card">
      <a href='/vendors'>Return to vendor's list</a>
      <a href='/'>Return to <small>Main Page</small></a>
    </div>

  </div>
</body>

</html>