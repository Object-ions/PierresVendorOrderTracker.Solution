@{
  Layout = "_Layout";
}

<h1>Add a new order to @Model.Name</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">

  <label for="orderNumber">Order Serial Number:</label>
  <input id="orderNumber" name="orderNumber" type="text" placeholder="ex. 4S3DCC" required>

  <label for="orderTitle">Order Title:</label>
  <input id="orderTitle" name="orderTitle" type="text" placeholder="ex. Title" required>

  <label for="orderDescription">Order Description:</label>
  <input id="orderDescription" name="orderDescription" type="text" placeholder="ex. 4 loaves of bread" required>

  <label for="orderPrice">Order Total Price (in UDS):</label>
  <input id="orderPrice" name="orderPrice" type="number" step="0.01" placeholder="ex. 45.95" required>

  <label for="orderDate">Order Date:</label>
  <input id="orderDate" name="orderDate" type="date" required>

  <button type='submit'>Add Order</button>
</form>