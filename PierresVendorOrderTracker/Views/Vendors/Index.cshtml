<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Pierre's Bakery - Vendors Order</title>
  <link rel="stylesheet" type="text/css" href="~/css/styles.css">
</head>

<body>
  @using PierresVendorOrderTracker.Models;
  <div class="container">
    <h1>Pierre's Bakery</h1>
    <h2>Vendors Order Tracker</h2>

    @if (@Model.Count == 0)
    {
      <h4>No vendors have been added yet!</h4>
    }

    <h3>Vendors List:</h3>
    @foreach (Vendor vendor in Model)
    {
      <a href='/vendors/@vendor.Id'>@vendor.Name</a>
    }
    <div class="link-card">
      <a href='/vendors/new'>Add a new vendor</a>
      <a href='/'>Return to <small>Main Page</small></a>
    </div>
  </div>
</body>

</html>