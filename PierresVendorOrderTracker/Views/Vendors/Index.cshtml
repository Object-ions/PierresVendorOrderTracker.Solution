<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Pierre's Bakery - Vendors Order</title>
  <link rel="stylesheet" type="text/css" href="~/css/styles.css">
</head>

<body>
  @using PierresVendorOrderTracker.Models;
  <div class="container">
    <h1>Pierre's Bakery</h1>
    <h2>Vendors Order Tracker</h2>

    @if (@Model.Count == 0)
    {
      <h3>No vendors have been added yet!</h3>
    }

    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
    }
    <h3><a href='/vendors/new'>Add a new vendor</a></h3>
    <p><a href='/'>Back home</a></p>
  </div>
</body>

</html>